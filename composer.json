{
    "name": "rougin/refinery",
    "description": "\"Ready-to-eat\" migrations for the Codeigniter framework.",
    "keywords": ["codeigniter", "database", "migrations", "refinery", "php"],
    "homepage": "https://rougin.github.io/refinery",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "https://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "rougin/describe": "~1.6",
        "rougin/spark-plug": "~0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2|~5.7",
        "rougin/codeigniter": "~3.1.0",
        "scrutinizer/ocular": "~1.1.0"
    },
    "bin": [
        "bin/refinery",
        "bin/refinery.php"
    ],
    "autoload": {
        "psr-4": {
            "Rougin\\Refinery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Refinery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "suggest": {
        "rougin/codeigniter": "Core functionality of the Codeigniter framework.",
        "rougin/combustor": "MVC code generator for the Codeigniter framework."
    }
}